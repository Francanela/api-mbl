generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String    @id @default(uuid())
  name           String
  lastName       String
  email          String?   @unique
  cpf            String?   @unique
  dataNascimento DateTime
  created_at     DateTime  @default(now())
  updated_at     DateTime  @default(now()) @updatedAt
  password       String?
  Phone          Phone[]
  Address        Address[]

  @@map("users")
}

model Application {
  id         String   @id @default(uuid())
  nome       String
  token      String
  created_at DateTime @default(now())
  updated_at DateTime @default(now()) @updatedAt

  @@map("application")
}

model Phone {
  id           String    @id @default(uuid())
  user         User      @relation(fields: [user_id], references: [id])
  user_id      String
  phone_number String
  main_phone   Boolean
  created_at   DateTime  @default(now())
  updated_at   DateTime  @default(now()) @updatedAt
  deleted_at   DateTime?

  @@map("phones")
}

model Address {
  id                 String    @id @default(uuid())
  street_address     String
  number             String
  additional_details String?
  neighborhood       String
  city               String
  state              String
  country            String
  zipCode            String
  landmark           String?
  main_address       Boolean   @default(false)
  user_id            String
  user               User      @relation(fields: [user_id], references: [id])
  created_at         DateTime  @default(now())
  updated_at         DateTime  @default(now()) @updatedAt
  deleted_at         DateTime?
  @@map("address")
}
